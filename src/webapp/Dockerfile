# build
FROM node:latest AS build

ARG REACT_APP_BASE_API
ENV REACT_APP_BASE_API $REACT_APP_BASE_API

ARG REACT_APP_TIMEOUT_IN_MILLISECONDS
ENV REACT_APP_TIMEOUT_IN_MILLISECONDS $REACT_APP_TIMEOUT_IN_MILLISECONDS

ARG REACT_APP_CAPTCHA_SITE_KEY
ENV REACT_APP_CAPTCHA_SITE_KEY $REACT_APP_CAPTCHA_SITE_KEY

ARG REACT_APP_NOTIFICATION_CHECK_IN_MILLISECONDS
ENV REACT_APP_NOTIFICATION_CHECK_IN_MILLISECONDS $REACT_APP_NOTIFICATION_CHECK_IN_MILLISECONDS

ARG REACT_APP_BROWSER_NOTIFICATIONS_THRESHOLD_IN_MINUTES
ENV REACT_APP_BROWSER_NOTIFICATIONS_THRESHOLD_IN_MINUTES $REACT_APP_BROWSER_NOTIFICATIONS_THRESHOLD_IN_MINUTES

WORKDIR /build
COPY package.json package.json
COPY package-lock.json package-lock.json

RUN npm ci
COPY public/ public
COPY src/ src
RUN npm run build

# run
FROM nginx:stable-alpine
COPY --from=build /build/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
